{
  "manifest_version": 3,
  "name": "MOMO Automation",
  "version": "1.0",
  "description": "Automation for MOMO admin,saving man-powers on tedious tasks.",
  "permissions": [
    "sidePanel",
    "tabs",
    "scripting"
  ],
  "host_permissions": [
    "https://scm.momoshop.com.tw/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "action": {
    "default_title": "MOMO Automation",
    "default_icon": "128M.png"
  },
  "icons": {
    "128": "128M.png"
  }
}
